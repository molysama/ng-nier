$bgColor = #C8C2AA
$color = #4D493E
$letterSpacing = .1rem
$boxShadow = 3px 3px 0 rgba($color, .6)
$t-shadow = .4rem .3rem rgba($color, .3)

$c-bg = #C8C2AA
$c-disabled = #ffffff
$c-grid = #CCC8B1
$c-weak = #BAB5A1
$c-medium = #DCD8C0
$c-border = #716f68
$c-strong = $color
$transition-dur = 0.2s

*:focus
    outline none !important

::selection
    background-color $c-weak

body
    background-color: $c-bg;
    background-size: 4px 4px;
    background-image: linear-gradient(90deg, transparent, transparent 3px, rgba(0,0,0,.07) 4px), linear-gradient(transparent, transparent 3px, rgba(0,0,0,.07) 4px);
    color: $color;
    font-weight: 300;
    margin: 0;
    min-height: 100vh;
    box-shadow: inset 0 0 150px rgba($color, .4), inset 0 0 150px rgba($color, .3);
    display: flex;
    min-height: 100vh;
    flex-direction: column;
    letter-spacing: $letterSpacing;
    font-family helvetica, sans-serif

.container
    padding 0 4rem 

fieldset.fieldset
    margin-top 0.5rem
    margin-bottom 0.5rem
    padding 0.5rem 1rem 1rem 1rem
    border 0.1rem solid $c-border
    legend
        padding 0 0.5rem

.text
    text-transform uppercase
    font-weight 300
    letter-spacing .7rem
    text-shadow $t-shadow

    small
        text-shadow none
        text-transform none
        letter-spacing $letterSpacing

button.nr-button {
    cursor: pointer;
    font: inherit;
    border: none;
    padding: .4rem 1rem;
    background-color: rgba($color, .3);
    color: $color;
    box-sizing: content-box;
    position: relative;
    border: 1px solid transparent;
    border-left: none;
    border-right: none;
    
    &::before {
        content: "";
        position: absolute;
        z-index: -1;
        left: 0; top: 3px; bottom: 3px;
        width: 0;
        background-color: $c-strong;
        transition: width .2s;
    }
    
    &::after {
        content: "";
        display: none;
        position: absolute;
        background: $c-strong;
        width: 100%;
        height: 2px;
        left: 0;
        bottom: -4px;
    }
    
    &:hover, &:focus {
        background-color: transparent;
        color: $c-bg;
        border-color: $c-strong;
        
        &::before {
        width: 100%;
        }
    }
}

