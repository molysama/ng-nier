.nr-checkbox
    padding-left 0.5rem
    padding-right 0.5rem
    position relative
    text-align center
    display inline-block
    cursor pointer
    .label
        display flex
        align-items center
        padding-left .2em
        transform translateY(0.36em)
        &:before
            content ''
            transform rotate(45deg) translate(0.1em, -0.08em)
            transition background .1s linear
            margin-right .6em
            padding .16em
            border 1px solid $c-border
            width 1em
            min-width @width
            height @width
            min-height @width
            background-clip content-box!important
            background transparent
        &.is-checked:before
            background $color
        &.disabled
            color $c-disabled
            &:before
                border-color $c-disabled
            &.is-checked:before
                background-color $c-disabled